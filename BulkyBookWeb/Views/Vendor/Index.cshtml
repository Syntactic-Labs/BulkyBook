@model IEnumerable<Vendor>
@{
    ViewData["Title"] = "Vendor List";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-sm table-bordered table-striped table-hover" style="width 100%">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var vendor in Model)
        {
            <tr>
                <td>@vendor.Code</td>
                <td>@vendor.Name</td>
                <td>@vendor.Address</td>
                <td>@vendor.City</td>
                <td>@vendor.State</td>
                <td>@vendor.Zip</td>
                <td>@vendor.Phone</td>
                <td>@vendor.Email</td>
                <td>
                    <a asp-controller="Vendor" asp-action="Detail">Detail</a>
                    <a asp-controller="Vendor" asp-action="Edit">Edit</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
      <tr><td colspan="9"><h4><a asp-controller="Vendor" asp-action="Create">Add Vendor</a></h4></td></tr>
    </tfoot>
</table>
@model IEnumerable<User>
@{
    ViewData["Title"] = "User List";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-sm table-bordered table-striped table-hover" style="width 100%">
    <thead>
        <tr>
            <th>Join Date</th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Is Admin</th>
            <th>Is Reviewer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.JoinDateTime</td>
                <td>@user.Username</td>
                <td>@user.Firstname</td>
                <td>@user.Lastname</td>
                <td>@user.Phone</td>
                <td>@user.Email</td>
                <td>@user.IsAdmin</td>
                <td>@user.IsReviewer</td>
                <td>
                    <a asp-controller="User" asp-action="Detail">Detail</a>
                    <a asp-controller="User" asp-action="Edit">Edit</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
      <tr><td colspan="9"><h4><a asp-controller="User" asp-action="Create">Add User</a></h4></td></tr>
    </tfoot>
</table>


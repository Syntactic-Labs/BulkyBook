@model IEnumerable<User>
@{
    ViewData["Title"] = "User List";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-striped table-hover" style="width 100%">
    <thead>
        <tr>
            <th>Join Date</th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Is Admin</th>
            <th>Is Reviewer</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.JoinDateTime</td>
                <td>@user.Username</td>
                <td>@user.Firstname</td>
                <td>@user.Lastname</td>
                <td>@user.Phone</td>
                <td>@user.Email</td>
                <td>@user.IsAdmin</td>
                <td>@user.IsReviewer</td>
            </tr>
        }
    </tbody>
</table>

